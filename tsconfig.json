{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    //"esModuleInterop": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "target": "ES2018",
    "outDir": "build",
    "lib": ["ES2018"],
    "types": ["mocha", "node"],
    "baseUrl": ".",
  },
  "include": ["src"],
}
